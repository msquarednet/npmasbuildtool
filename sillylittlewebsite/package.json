{
  "name": "sillylittlewebsite",
  "version": "1.0.0",
  "description": "blah",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "node index.js 4000",
    "test": "node node_modules/.bin/mocha test -u bdd -R spec",
    "pretest": "npm run compile && npm run lint",
    "lint": "jshint *.js **/*.js   --exclude ./lib/*.js",
    "compile:coffee": "coffee --compile --output ./lib ./src/coffeescripts",
    "compile:ts": "tsc --outDir ./lib --module commonjs ./src/typescripts/tsCode.ts",
    "compile": "npm run compile:coffee && npm run compile:ts",
    "precompile": "npm run clean",
    "clean": "rimraf lib/*.*",
    "build:less": "lessc client/less/demo.less public/css/site.css",
    "build:bundle": "browserify ./client/js/app.js | uglifyjs -mc > ./public/js/bundle.js",
    "build:clean": "rimraf public/css/* public/js/*",
    "prebuild": "npm run build:clean",
    "build": "npm run build:less && npm run build:bundle",
    "stop": "echo 'Running STOP script'", "restart": "echo 'RESTARTed'"
  },
  "jshintConfig": {
    "esnext": "true",
    "noyield": "true",
    "asi": "true",
    "node": "true"
  },
  "author": "me",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^13.0.0",
    "coffee-script": "^1.10.0",
    "jshint": "^2.9.1",
    "less": "^2.6.1",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "should": "^8.3.1",
    "supertest": "^1.2.0",
    "typescript": "^1.8.10",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "koa": "^1.2.0"
  }
}
